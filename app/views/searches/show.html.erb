<h1>Search Results</h1>
<p><%= link_to 'Back', new_search_path %></p>

<% if @search.search_books.empty? %>
	<p>No Books found</p>

<% else %>
	<table>
		<tr>
			<td>Name</td>
			<td>Author</td>
			<td>ISBN</td>
			<td>Edit Link</td>
			<td>Checkout Link</td>
		</tr>
	<%= @search.search_books.each do |book| %>
		<tr>
			<td><h1><%= book.title %></h1></td>
			<td><%= book.author %></td>
			<td><%= book.isbn %></td>
			<td><%= link_to 'Edit', edit_book_path(book) %></td>
			<% if book.copies > 0 %>
				<td><%= link_to 'Checkout', new_search_path, :onclick => book.decrement(:copies, 1) %></td> 
			<% end %>
		</tr>
	<% end %>
	</table>
<% end %>
